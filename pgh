#!/bin/bash
echo generate blog output files
pelican content -s publishconf.py

cd output
pwd

echo Stage output files
git add .

echo Commit output files
git commit -m "$1"

echo Push output files
git push

cd ..
pwd

echo Stage blog files 
git add .

echo Commit blog files
git commit -m "$1"

echo Push source files
git push

pwd


echo /// ALL DONE! ///

